<p id="notice"><%= notice %></p>

<h1>Outage Reports</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Device</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outage_reports.each do |outage_report| %>
      <tr>
        <td><%= outage_report.category %></td>
        <td><%= outage_report.device_id %></td>
        <td><%= outage_report.started_at %></td>
        <td><%= outage_report.ended_at %></td>
        <td><%= outage_report.description %></td>
        <td><%= link_to 'Show', outage_report %></td>
        <td><%= link_to 'Edit', edit_outage_report_path(outage_report) %></td>
        <td><%= link_to 'Destroy', outage_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Outage Report', new_outage_report_path %>
